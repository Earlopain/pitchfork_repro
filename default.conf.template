server {
  listen 3000;
  server_name localhost;
  root /app/public;
  index index.html;
  access_log off;
  client_max_body_size 100m;

  location @app_server {
    proxy_pass http://app_server;
  }

  location / {
    try_files $uri @app_server;
  }
  
  error_page 404 /404.html;
  error_page 500 502 503 504 /500.html;
}

upstream app_server {
  server localhost:3001;
}
